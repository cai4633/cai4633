	* 
		padding: 0
		margin: 0
	body{
		width 100%
		padding 50px
		border 50px solid blue
	}
	.box0 
		position: relative;
		width 100%
		height 250px
		box-sizing border-box
		border: 20px solid #000;
		text-align center
		.box2
			display block
			height 200px
			width 50%
			border 5px solid #FB13E6;
			transform translateX(0px)
			margin 10px 
			z-index 100
			.box4 {
				width 100px;
				height 20px
				background red
				position fixed
				top 0
			}

		.ctrlWrap
			display: block;
			width 60%
			position: absolute;
			bottom: 2px;
			width: 100%;
			padding: 5px;
			box-sizing border-box
			border-top: 1px solid #8C8C8C;
			.controller
				display inline-block
				margin 2px auto
				label
					display: inline-block;
					font-size: 14px;
					font-weight: bold;
					vertical-align: middle;
				select.char
					display inline-block
					margin 0px 3px
					vertical-align middle
				input.ctrl
					display inline-block;
					vertical-align middle;
					width 200px
					height 40px

